<div class ="index">
  <h1 class = "index-top">Books</h1>
 
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <td></td>
    </tr>
    
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%=link_to "Show", books_path(book.id), :style => "color: #464646" %>
          <%= link_to "Edit", books_edit_path, :style => "color: #464646" %>
          <%= link_to "Destroy", "/books/#{book.id}/", :style => "color: #464646" %>
        </td>
      </tr>
    <% end %>
    
  </table>
  
</div>
  
<div class ="new">
  <h2 class = "new-top">New book</h2>
  
  <%= form_with model: @book, url:'/books/create/', local:true do |f| %>
 
  <h5>Title</h5>
  <%= f.text_field :title %>
 
  <h5>Body</h5>
  <%= f.text_area :body %>

  <p><%= f.submit ' Create Book ' %></p>

  <% end %>
  
</div>

