<div class = "edit">
  <h1 class = "edit-top">Editing Book</h1>
  
    <% if @book.errors.any? %>
    <div class = "error">
      <h5>
        <%= @book.errors.count %> errors prohibited this book from being saved:
      </h5>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div> 
    <% end %>
  
  <%= form_with model: @book, url:"/books/#{@book.id}/update/", local:true do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>Body</h5>
    <%= f.text_area :body %>
    <p><%= f.submit ' Update Book ' %></p>
  <% end %>
  
  <div class = "edit-link">
    <%= link_to "Show", book_path(@book.id), :style => "color: #464646" %> |
    <%= link_to "Back", books_path, :style => "color: #464646" %>
  </div>
  
</div>
